<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settings"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_cell_height"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_back"
            android:layout_width="@dimen/ico_size_48"
            android:layout_height="@dimen/ico_size_48"
            android:text=""
            app:icon="@drawable/ic_back_button"
            android:backgroundTint="@color/btn_back_background"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/start_offset_16"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="@dimen/ico_size"
            app:iconTint="@color/caption_settings" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_caption"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/end_offset_12"
            android:textSize="@dimen/settings_caption_text_size"
            android:textColor="@color/caption_settings"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_cell_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dark_theme"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/start_offset_16"
            android:textColor="@color/text_settings"
            android:textSize="@dimen/settings_text_size"

            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/end_offset_12"
            />

     </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_cell_height">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_application"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/start_offset_16"
            android:textColor="@color/text_settings"
            android:textSize="@dimen/settings_text_size"
            />


        <ImageView
            android:layout_width="@dimen/ico_size"
            android:layout_height="@dimen/ico_size"
            android:background="@drawable/ic_share_button"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/end_offset_12" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_cell_height">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_support"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/start_offset_16"
            android:textColor="@color/text_settings"
            android:textSize="@dimen/settings_text_size"
            />


        <ImageView
            android:layout_width="@dimen/ico_size"
            android:layout_height="@dimen/ico_size"
            android:background="@drawable/ic_support_button"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/end_offset_12" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_cell_height">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_document"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/start_offset_16"
            android:textColor="@color/text_settings"
            android:textSize="@dimen/settings_text_size"
            />


        <ImageView
            android:layout_width="@dimen/ico_size"
            android:layout_height="@dimen/ico_size"
            android:background="@drawable/ic_user_button"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/end_offset_12" />

    </FrameLayout>

</LinearLayout>