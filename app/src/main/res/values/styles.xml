<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewSettings">
        <item name="android:paddingHorizontal">@dimen/settings_padding_horizontal</item>
        <item name="android:paddingVertical">@dimen/settings_padding_vertical</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">@color/text_settings</item>
        <item name="fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="ButtonMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/ico_padding</item>
        <item name="iconSize">@dimen/ico_size</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/button_margin_offset</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SwitchMaterialStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="trackTint">@color/switch_background</item>
        <item name="thumbTint">@color/switch_track</item>
    </style>

    <style name="ImageRoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/search_image_round</item>
    </style>

    <style name="SearchButtonReconnect" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/search_button_reconnect</item>
        <item name="android:textColor">@color/search_button_reconnect_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/search_14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="PlayerTrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/player_track_name_text</item>
        <item name="android:textColor">@color/player_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PlayerArtistName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/player_artist_name_text</item>
        <item name="android:textColor">@color/player_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PlayerDetailsKey">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/player_details_text</item>
        <item name="android:textColor">@color/player_details_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/player_height_32</item>
    </style>

    <style name="PlayerDetailsValue">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/player_details_text</item>
        <item name="android:textColor">@color/player_text_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">end</item>
    </style>

</resources>