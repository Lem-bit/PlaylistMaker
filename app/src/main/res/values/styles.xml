<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewSettings">
        <item name="android:paddingHorizontal">@dimen/settings_padding_horizontal</item>
        <item name="android:paddingVertical">@dimen/settings_padding_vertical</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">@color/text_settings</item>
        <item name="fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="ButtonMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/ico_padding</item>
        <item name="iconSize">@dimen/ico_size</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/button_margin_offset</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SwitchMaterialStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="trackTint">@color/switch_background</item>
        <item name="thumbTint">@color/switch_track</item>
    </style>

    <style name="ImageRoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/search_image_round</item>
    </style>
</resources>